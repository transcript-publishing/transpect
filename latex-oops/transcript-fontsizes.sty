\renewcommand\small{%
  \ifx\ts@layout@type\ts@str@layout@mdw
    \@setfontsize\small{8.4bp}{11bp}%
  \else
    \@setfontsize\small{9bp}{11}% head
  \fi%
  %\abovedisplayskip 8.5\p@ \@plus3\p@ \@minus4\p@
